<div class="alert alert-success alert-dismissible fade show mt-4 mb-3" role="alert" id='notice'>
  <%= notice %>
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>

<script>
  $("#notice").fadeTo(3000, 500).slideUp(500, function(){
      $("#notice").slideUp(500);
  });
</script>

