<div class="alert alert-warning alert-dismissible fade show mt-4 mb-3" role="alert" id='alert'>
  <%= alert %>
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>

<script>
  $("#alert").fadeTo(3000, 500).slideUp(500, function(){
      $("#alert").slideUp(500);
  });
</script>